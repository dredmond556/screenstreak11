{
  "expo": {
    "name": "ScreenStreak",
    "slug": "screenstreak",
    "version": "1.0.0",
    "orientation": "portrait",
    // icon removed to avoid missing asset during setup, add your icon file and path here when ready
    "scheme": "screenstreak",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.screenstreak.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "ScreenStreak uses the photo library when you choose to share or pick images.",
        "NSPhotoLibraryAddUsageDescription": "ScreenStreak may save images to your photo library when exporting or sharing content.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {},
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    // splash removed to avoid missing asset during setup, add images when ready
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}